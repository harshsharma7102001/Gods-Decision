<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="7dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:hint="Enter Options"
                        android:inputType="text"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@id/addBtn"
                        android:id="@+id/getTask"
                        android:background= "@null"
                        android:layout_marginEnd="5sp"
                        android:singleLine="true"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add"
                        android:background="@drawable/add_btn"
                        app:backgroundTint="@null"
                        android:id="@+id/addBtn"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your time schedule"
            android:textSize="20sp"
            android:fontFamily="@font/jua"
            android:layout_marginStart="20sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="4sp"
            android:padding="5sp"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="20sp"
                android:background="@null"
                android:hint="9:00..."
                android:id="@+id/startTime"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check"
                android:text="am"
                android:textSize="20sp"
                android:layout_toRightOf="@id/startTime"
                android:fontFamily="@font/jua"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-------  to  -------"
                android:layout_toLeftOf="@id/endTime"
                android:textAlignment="center"
                android:layout_toRightOf="@id/check"/>
            <EditText
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/checkone"
                android:textSize="20sp"
                android:background="@null"
                android:hint="9:00..."
                android:id="@+id/endTime"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkone"
                android:text="pm"
                android:textSize="20sp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/jua"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:text="Added Tasks:- "
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/jua"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:fontFamily="@font/jua"
            android:layout_marginStart="10sp"
            android:id="@+id/choiceList"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate"
            android:textSize="25sp"
            android:fontFamily="@font/jua"
            android:background="@drawable/decide_btn"
            app:backgroundTint="@null"
            android:id="@+id/decide"/>
    </LinearLayout>
</LinearLayout>